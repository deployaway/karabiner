{
    "title": "@deployaway: VS Code",
    "rules": [
        {
            "description": "[@deployaway: VS Code] |Left Ctrl + P| -> |Left Cmd + Left Shift + P| = open command palette",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "p",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to_if_alone": [
                        {
                            "key_code": "p",
                            "modifiers": [
                                "left_shift",
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.facebook\\.fbvscode$",
                                "^com\\.microsoft\\.VSCode$"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "[@deployaway: VS Code] |Left Ctrl + F| -> |Left Cmd + F| = find",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to_if_alone": [
                        {
                            "key_code": "f",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.facebook\\.fbvscode$",
                                "^com\\.microsoft\\.VSCode$"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "[@deployaway: VS Code] |Left Ctrl + H| -> |Left Cmd + Left Alt + F| = replace",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to_if_alone": [
                        {
                            "key_code": "f",
                            "modifiers": [
                                "left_command",
                                "left_alt"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.facebook\\.fbvscode$",
                                "^com\\.microsoft\\.VSCode$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}