{
  "title": "@deployaway: Basic Operations",
  "rules": [
    {
      "description": "Basic Ops |Ctrl+C| = copy (Cmd+C)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "c",
              "modifiers": ["command"]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "c",
              "modifiers": ["control"]
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 500,
            "basic.to_if_held_down_threshold_milliseconds": 500
          }
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+V| = paste (Cmd+V)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "v",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+X| = cut (Cmd+X)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "x",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+S| = save (Cmd+S)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "s",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+Z| = undo (Cmd+Z)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "z",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+Shift+Z| = redo (Cmd+Shift+Z)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": ["control", "shift"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "z",
              "modifiers": ["command", "shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+A| = select all (Cmd+A)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "a",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    }
  ]
}
