{
  "title": "@deployaway: Basic Operations (MacOS-wide)",
  "rules": [
    {
      "description": "Basic Ops |Ctrl+C| = copy (Cmd+C)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "c",
              "modifiers": ["command"]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "c",
              "modifiers": ["control"]
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 500,
            "basic.to_if_held_down_threshold_milliseconds": 500
          }
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+V| = paste (Cmd+V)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "v",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+X| = cut (Cmd+X)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "x",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+S| = save (Cmd+S)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "s",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+Z| = undo (Cmd+Z)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "z",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+Shift+Z| = redo (Cmd+Shift+Z)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": ["control", "shift"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "z",
              "modifiers": ["command", "shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+A| = select all (Cmd+A)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "a",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Cmd+E| = open Finder search (Alt+Cmd+Space)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": ["command", "option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^com\\.apple\\.finder$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Alt+Tab|->|Cmd+Tab| = App Switcher",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 250
          },
          "to_if_alone": [
            {
              "key_code": "tab",
              "modifiers": ["command"],
              "halt": true
            }
          ],
          "to_delayed_action": {
            "to_if_canceled": [
              {
                "key_code": "tab"
              }
            ]
          },
          "to_if_held_down": [
            {
              "key_code": "tab",
              "modifiers": ["command"],
              "repeat": false,
              "halt": true
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Cmd+Tab|->|Ctrl+Up Arrow| = Mission Control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "up_arrow",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Basic Ops |Ctrl+F|->|Cmd+F| = find",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "f",
              "modifiers": ["command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^org\\.macports\\.X11$",
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyper$",
                "^org\\.virtualbox\\.app\\.VirtualBoxVM$",
                "^com\\.microsoft\\.rdc\\.macos$",
                "^tv\\.parsec\\.www$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
