{
  "title": "@deployaway: Input Language",
  "rules": [
    {
      "description": "Input Language |Shift+Alt| = prev. input (Shift+Alt+F4)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "shift",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "shift",
              "modifiers": ["option"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f4",
              "modifiers": ["option", "shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "option",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "option",
              "modifiers": ["shift"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f4",
              "modifiers": ["option", "shift"]
            }
          ]
        }
      ]
    }
  ]
}
